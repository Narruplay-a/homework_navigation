<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="materialButtonOutlinedStyle">@style/MyButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/MyPositiveButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/MyNeutralButton</item>
    </style>

    <style name="MyButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="MyPositiveButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyNeutralButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>